{
    "name": "encodia/laravel-health-env-vars",
    "description": "Custom check for Spatie's Laravel Health - Ensure every .env variable you need has been set",
    "keywords": [
        "encodia",
        "laravel",
        "spatie",
        "health",
        "checks",
        "env",
        "environment",
        "laravel-health-env-vars"
    ],
    "homepage": "https://github.com/encodia/laravel-health-env-vars",
    "license": "MIT",
    "authors": [
        {
            "name": "Erik D'Ercole",
            "email": "erik.dercole@encodia.it",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^9.0|^10.0",
        "spatie/laravel-health": "^1.8",
        "spatie/laravel-package-tools": "^1.9.2"
    },
    "require-dev": {
        "larastan/larastan": "^2.8",
        "laravel/pint": "^1.4",
        "nunomaduro/collision": "^7",
        "orchestra/testbench": "^7.0|^8.0",
        "pestphp/pest": "^2.33",
        "pestphp/pest-plugin-type-coverage": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "Encodia\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Encodia\\EnvVars\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "XDEBUG_MODE=off ./vendor/bin/phpstan analyse --memory-limit 2G --ansi",
        "test": "XDEBUG_MODE=off ./vendor/bin/pest --bail --colors=always",
        "test-coverage": "./vendor/bin/pest --coverage --colors=always",
        "type-coverage": "XDEBUG_MODE=off ./vendor/bin/pest --type-coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Encodia\\EnvVarsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
